extends ../../layout

block content
  div(class='col-md-6')
    form(id='shipment-delete-form' name='shipment-delete-form' class='form-horizontal' method="POST" action='')
      input(id='id' type="hidden" name='id' value=shipment.id class='form-control')
      div(class='form-group')
        div(class='col-md-12') Code: #{shipment.code}; Name: #{shipment.name};  Weight:  #{shipment.weight};
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Delete
